-- 搜索 -->\r\n          <el-input size=\"small\" v-model=\"input_name\" placeholder=\"请输入评论人名称，可回车搜索...\" prefix-icon=\"el-icon-search\"\r\n          style=\"width: 400px;margin-right: 10px;\" @keydown.enter.native=\"search_name\"></el-input>\r\n          <el-button size=\"small\" type=\"primary\"  @click=\"search_name\" icon=\"el-icon-search\">搜索</el-button>\r\n          <!-- <el-button size=\"small\" type=\"success\"  @click=\"dialog_add = true\" icon=\"el-icon-plus\">新增</el-button> -->\r\n      </div>\r\n      <div>\r\n          <el-table\r\n          :data=\"commentData\"\r\n          style=\"width: 100%\">\r\n          <el-table-column\r\n            label=\"编号\"\r\n            width=\"70\">\r\n            <template slot-scope=\"scope\">\r\n              <span style=\"margin-left: 10px\">{{ scope.row.id }}</span>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"昵称\"\r\n            width=\"150\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.nickname }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"身份\"\r\n            width=\"100\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag v-if=\"scope.row.adminComment\" type=\"danger\" size=\"medium\">管理员</el-tag>\r\n              <el-tag v-if=\"!scope.row.adminComment\" size=\"medium\">游客</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"评论内容\"\r\n            width=\"300\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.content }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"发表时间\"\r\n            width=\"230\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.createTime }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"ip地址\"\r\n            width=\"180\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.ip }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"邮箱\"\r\n            width=\"230\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.email }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"博客id\"\r\n            width=\"200\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.blogId }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column\r\n            label=\"父评论id\"\r\n            width=\"100\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag size=\"medium\">{{ scope.row.parentCommentId }}</el-tag>\r\n            </template>\r\n          </el-table-column>\r\n\r\n\r\n          <el-table-column label=\"操作\"  fixed=\"right\" width=\"180\">\r\n            <template slot-scope=\"scope\">\r\n              <el-button\r\n                size=\"mini\"\r\n                type=\"primary\"\r\n                @click=\"handleLook(scope.$index, scope.row)\">回复</el-button>\r\n              <!-- <el-button\r\n                size=\"mini\"\r\n                @click=\"handleEdit(scope.$index, scope.row)\">编辑</el-button> -->\r\n              <el-button\r\n                size=\"mini\"\r\n                type=\"danger\"\r\n                @click=\"handleDelete(scope.$index, scope.row)\">删除</el-button>\r\n            </template>\r\n          </el-table-column>\r\n        </el-table>\r\n      </div>\r\n\r\n      <!-- 分页 -->\r\n      <div style=\"margin-top: 20px;\" v-if=\"showPage\">\r\n        <el-pagination\r\n        background\r\n        @size-change=\"handleSizeChange\"\r\n        @current-change=\"handleCurrentChange\"\r\n        :current-page.sync=\"currentPage\"\r\n        :page-size=\"pagesize\"\r\n        layout=\"total, prev, pager, next\"\r\n        :total=\"total\">\r\n      </el-pagination>\r\n      </div>\r\n\r\n      <!-- 对话框 回复评论 -->\r\n      <el-dialog\r\n        title=\"回复评论\"\r\n        :visible.sync=\"dialog_look\"\r\n        width=\"30%\"\r\n      >\r\n      <el-form status-icon  label-width=\"80px\" :model=\"subComment\" ref=\"subComment\">\r\n        <el-form-item label=\"文章：\">\r\n          {{BackComment.blogTitle}}\r\n        </el-form-item>\r\n        <el-form-item label=\"昵称：\">\r\n          {{BackComment.nickname}}\r\n        </el-form-item>\r\n        <el-form-item label=\"内容：\">\r\n          {{BackComment.content}}\r\n        </el-form-item>\r\n        <el-form-item label=\"日期：\">\r\n          {{BackComment.time}}\r\n        </el-form-item>\r\n        <el-form-item label=\"回复：\" prop=\"content\"\r\n         :rules=\" { required: true, message: '请输入评论内容', trigger: 'blur' }\">\r\n          <el-input type=\"textarea\" v-model=\"subComment.content\"></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n        <span slot=\"footer\" class=\"dialog-footer\">\r\n          <el-button @click=\"dialog_look = false\">取 消</el-button>\r\n          <el-button type=\"primary\" @click=\"submitBackComment('subComment')\">确 定</el-button>\r\n        </span>\r\n      </el-dialog>\r\n\r\n      <!-- 对话框 编辑评论 -->\r\n      <!-- <el-dialog\r\n      title=\"编辑评论\"\r\n      :visible.sync=\"dialog_edit\"\r\n      width=\"30%\"\r\n      >\r\n      <el-form status-icon  label-width=\"80px\">\r\n        <el-form-item label=\"昵称\">\r\n          <el-input v-model=\"type_edit.name\"\r\n          :rules=\"{required: true, message: '文章类型不能为空', trigger: 'blur'}\"></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n        <span slot=\"footer\" class=\"dialog-footer\">\r\n          <el-button @click=\"dialog_edit = false\">取 消</el-button>\r\n          <el-button type=\"primary\" @click=\"updateType\">确 定</el-button>\r\n        </span>\r\n      </el-dialog> -->\r\n\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'CommentBlog',\r\n  data () {\r\n   return {\r\n      commentData:[],  //评论数据\r\n      currentPage: 1,  //当前页\r\n      total:0, //总记录数\r\n      pagesize:5, //页面大小\r\n      input_name:'', //搜索框值\r\n      dialog_add: false, //添加评论的对话框\r\n      dialog_edit: false, //编辑评论的对话框\r\n      type_edit:{\r\n        id:'',\r\n        name:''\r\n      },\r\n      showPage: true, //是否显示分页\r\n      dialog_look: false, //显示回复的对话框\r\n      BackComment: {\r\n        blogTitle: '',\r\n        nickname: '',\r\n        content: '',\r\n        time: '',\r\n      },\r\n      subComment:{\r\n        blogId:'',\r\n        parentCommentId:'',\r\n        adminComment:'',\r\n        nickname:'SY',\r\n        content:'', //回复评论的内容\r\n        email:'2270486528@qq.com'\r\n      }\r\n   }\r\n  },\r\n  mounted() {\r\n    this.initComment();\r\n  },\r\n  methods:{\r\n    //初始化评论数据\r\n    initComment(){\r\n      const _this = this\r\n      this.$axios.get('/comment/getCommentByPage?current=' + this.currentPage + '&size=' + this.pagesize).then(resp=>{\r\n        console.log(resp)\r\n        _this.commentData = resp.data.data.records\r\n        _this.total = resp.data.data.total\r\n      })\r\n    },\r\n    //查看评论\r\n    handleLook(index, row){\r\n      console.log(row)\r\n      const _this = this\r\n      _this.dialog_look = true\r\n      //如果评论不来自留言板，说明来自博客，则获取博客名称\r\n      if (row.blogId!=-1) {\r\n        this.$axios.get('/blog/getByBlogId?id=' + row.blogId).then(resp => {\r\n          _this.BackComment.blogTitle = resp.data.data.title\r\n        })\r\n      }else {\r\n        _this.BackComment.blogTitle = '来自留言板'\r\n      }\r\n      _this.BackComment.nickname = row.nickname\r\n      _this.BackComment.content = row.content\r\n      _this.BackComment.time = row.createTime\r\n\r\n      _this.subComment.blogId = row.blogId\r\n      _this.subComment.parentCommentId = row.id\r\n      _this.subComment.adminComment = true\r\n    },\r\n    //提交回复\r\n    submitBackComment(formName) {\r\n      this.$refs[formName].validate((valid) => {\r\n        if (valid) {\r\n          const _this = this\r\n          this.$axios.post('/comment/saveComments',this.subComment).then(resp=>{\r\n            console.log(resp)\r\n            _this.initComment()\r\n            _this.BackComment.backComment = ''\r\n            _this.dialog_look = false\r\n            this.$message({ message: '回复评论成功！',type: 'success' });\r\n          })\r\n\r\n        } else {\r\n          console.log('error submit!!');\r\n          return false;\r\n        }\r\n      });\r\n    },\r\n    //编辑评论\r\n    handleEdit(index, row) {\r\n      const _this = this\r\n      console.log(index, row);\r\n      this.dialog_edit = true\r\n      this.getRequest('/type/getTypeById?id=' + row.id).then(resp=>{\r\n          console.log(resp)\r\n          _this.type_edit = resp.obj\r\n      })\r\n    },\r\n    //更新评论\r\n    updateType(){\r\n      const _this = this\r\n      this.putRequest('/type/updateType',this.type_edit).then(resp=>{\r\n        if(resp){\r\n          this.initComment()\r\n          _this.dialog_edit = false\r\n        }\r\n      })\r\n    },\r\n    //删除评论\r\n    handleDelete(index, row) {\r\n      console.log(index, row);\r\n      const _this = this\r\n      this.$confirm('此操作将永久删除该评论, 是否继续?', '提示', {\r\n          confirmButtonText: '确定',\r\n          cancelButtonText: '取消',\r\n          type: 'warning'\r\n        }).then(() => {\r\n          this.$axios.delete('/comment/deleteCommentById?id=' + row.id).then(resp=>{\r\n            if(resp){\r\n              this.initComment()\r\n              this.$message.success(resp.data.msg)\r\n            }\r\n          })\r\n        }).catch(() => {\r\n          this.$message({\r\n            type: 'info',\r\n            message: '已取消删除'\r\n          });\r\n        });\r\n\r\n    },\r\n    //搜索评论\r\n    search_name(){\r\n       const _this = this\r\n       this.getRequest('/comment/comments?nickname=' + this.input_name).then(resp=>{\r\n         console.log(resp)\r\n         if(_this.input_name == ''){\r\n           _this.initComment();\r\n           _this.showPage = true\r\n         }else{\r\n          _this.commentData = resp\r\n          _this.showPage = false\r\n          _this.input_name = ''\r\n         }\r\n\r\n\r\n       })\r\n    },\r\n    handleSizeChange(val) {\r\n      console.log(`每页 ${val} 条`);\r\n    },\r\n    handleCurrentChange(val) {\r\n      console.log(`当前页: ${val}`);\r\n      this.currentPage = val\r\n      this.initComment()\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n\r\n</style>\r\n"]}]}